    <dependencies>

        <!-- Metron -->

        <dependency>
            <groupId>com.cloudera.cyber</groupId>
            <artifactId>flink-stellar</artifactId>
            <version>${project.parent.version}</version>
        </dependency>

        <dependency>
            <groupId>com.cloudera.cyber</groupId>

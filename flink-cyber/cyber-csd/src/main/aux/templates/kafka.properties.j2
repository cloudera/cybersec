kafka.bootstrap.servers={{globals['kafka.brokers.list']}}
kafka.client.id=client_id
kafka.group.id=group_id
kafka.auto.offset.reset={{globals['kafka.auto.offset.reset']}}
kafka.acks={{globals['kafka.acks']}}
{% if globals['schema.registry.url']|length %}
  schema.registry.url={{globals['schema.registry.url']}}
{% else %}
  #schema.registry.url=
{% endif %}

{% set kafkaClientSecurityProtocol = globals['cybersec.kafka.client.security.protocol'] -%}
kafka.security.protocol={{kafkaClientSecurityProtocol}}

{%- if 'SSL' in kafkaClientSecurityProtocol %}
    kafka.ssl.truststore.location={{globals['ssl_client_truststore_location']}}
    kafka.ssl.truststore.password={{globals['ssl_client_truststore_password']}}
    kafka.sasl.mechanism=PLAIN
    kafka.ssl.enabled.protocols=TLSv1.2,TLSv1.1,TLSv1
    kafka.sasl.jaas.config=org.apache.kafka.common.security.plain.PlainLoginModule required username="cybersec" password="";
{%- endif %}